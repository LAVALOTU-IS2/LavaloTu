<%= stylesheet_link_tag 'orders' %>
<section class="dashboard clearfix">
	<%= render 'users/menu' %>
	<div class="history-orders wrapper container">
		<h2 class="title"><span class="nameUser"><%= @laundry.name %>,</span> your pending orders</h2>
		<ul class="options">
			<li><%= link_to '', history_orders_path , :class => 'record fa fa-list-alt', :alt => 'Previous Orders', :title => 'Previous Orders'%></li> 
		</ul>
		<section class="histories row">
			<% @orders.each do |order| %>
			<div class="history col-md-4">
				<div class="content">
					<h4 class="subtitle">
						Detail Service
						<%= link_to image_tag('user-m.svg'), deliver_path(id: order.id), :alt => 'Select deliver', :title => 'Select deliver', :class => 'select-deliver img-responsive'%>

						<%= link_to image_tag('show.png'), order_path(order), :alt => 'See Order', :title => 'See Order', :class => 'see-order img-responsive'%>
					</h4>
					<div class="detail-history">
						<div class="info clearfix">
							<div class="variable">
								<h5>Client:</h5>
							</div>
							<div class="data">
								<span><%= order.user.name + ' ' + order.user.lastname %></span>
							</div>
						</div>
						<div class="info clearfix">
							<div class="variable">
								<h5>Pickup Address:</h5>
							</div>
							<div class="data">
								<span><%= order.deliveries[0].place.address %></span>
							</div>
						</div>
						<div class="info clearfix">
							<div class="variable">
								<h5>Date Start:</h5>
							</div>
							<div class="data">
								<span><%= order.created_at.strftime("%B %d %Y, %l:%M %p") %></span>
							</div>
						</div>
						<div class="info clearfix">
							<div class="variable">
								<h5>Pickup date:</h5>
							</div>
							<div class="data">
								<span><%= order.pickup_date.strftime("%A %d of %B %Y") %></span>
							</div>
						</div>
						<div class="info clearfix">
							<div class="variable">
								<h5>Pickup Time:</h5>
							</div>
							<div class="data">
								<span><%= order.pickup_date.strftime("%I:%M %p") %></span>
							</div>
						</div>
						<div class="info clearfix">
							<div class="variable">
								<h5>Cost:</h5>
							</div>
							<div class="data">
								<span><%= order.total_cost %></span>
							</div>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</section>
	</div>
</section>