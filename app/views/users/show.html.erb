<%= stylesheet_link_tag 'users' %>
<section class="dashboard clearfix">
  <%= render 'menu' %>
  <div id="users-container">
    <section class="user-info">
      <div class="data row">
        <div class="user col-md-12">
          <h3 class="subtitle">User info:</h3>
          <ul>
            <li><span>Name:  </span> <a> <%= @user.name %> </a></li><br> 
            <li><span>Email:  </span> <a><%= @user.email %></a></li><br> 
            <li><span>Phone:  </span> <a><%= @user.phone %></a></li><br> 
            <li><span>Role:  </span> <a><%= @user.role %></a></li><br> 
          </ul>
        </div>
      </div>
      <div class="data row">
        <div class="user col-md-12">
          <h3 class="subtitle">Places</h3>
          <table>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Action</th>
            </tr>

            <% @user.places.each do |p| %>
            <tr>
              <td><%= p.name %></td>
              <td><%= p.address %></td>
              <td><%= link_to 'Destroy', [p.user, p], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </table>
          <br>
          <br>
         </div>
         <div class="user col-md-12">
         <ul>
          <li>
            <%= link_to 'New place', new_user_place_path(@user) %> 
          </li><br>
          <li>
            <%= link_to 'Destroy User', destroy_path(@user), method: :delete,
                 data: { confirm: 'Are you sure?' }%>
          </li><br>
          <li>
          <%= link_to 'User list', users_path %>
          </li>
          </ul>
        </div>
      </div>
    </section>
  </div>
</section>





  